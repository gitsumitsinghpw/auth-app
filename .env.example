# Database Configuration
MONGODB_URI=mongodb://localhost:27017/auth-app

# Authentication Secrets (Generate strong random keys)
NEXTAUTH_SECRET=your-nextauth-secret-key-minimum-32-characters
NEXTAUTH_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-key-minimum-32-characters

# Session Management (Must be at least 32 characters)
IRON_PASSWORD=your-iron-session-password-minimum-32-chars

# OAuth Providers (Optional - for Google/GitHub login)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# LDAP Configuration (Optional - for enterprise LDAP integration)
LDAP_SERVER_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=your-ldap-bind-password
LDAP_SEARCH_BASE=ou=users,dc=company,dc=com

# Security Settings (Optional - defaults provided in code)
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5
ACCOUNT_LOCKOUT_TIME_MS=1800000
MAX_LOGIN_ATTEMPTS=50
